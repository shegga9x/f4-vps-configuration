name: remote-apigateway
services:
  remote-apigateway:
    image: shegga/apigateway
    ports:
      - "8081:8080"
    environment:
      - JHIPSTER_APP_NAME=RemoteApiGateway
      - _JAVA_OPTIONS=-Xmx512m -Xms256m
      - SPRING_PROFILES_ACTIVE=dev,api-docs
      # Connect to Consul through Nginx proxy
      - SPRING_CLOUD_CONSUL_ENABLED=true
      - SPRING_CLOUD_CONSUL_HOST=consul.appf4.io.vn
      - SPRING_CLOUD_CONSUL_PORT=443
      - SPRING_CLOUD_CONSUL_SCHEME=https
      # Disable discovery and config temporarily to isolate the issue
      - SPRING_CLOUD_CONSUL_DISCOVERY_ENABLED=true
      - SPRING_CLOUD_CONSUL_CONFIG_ENABLED=true
      - SPRING_CLOUD_SERVICE_REGISTRY_AUTO_REGISTRATION_ENABLED=true
      # Add Authorization header with Bearer token (Replace <TOKEN> manually)
      - SPRING_CLOUD_CONSUL_CONFIG_HEADERS_Authorization=Bearer eyJhbGciOiJSUzI1NiIsInR5cCIgOiAiSldUIiwia2lkIiA6ICI4TEgyYXBXZ0RPRHM3YkFIVmpuX3BsaVc5cU9VNDBBQ3F6RWM2d1RReWZvIn0..Ch4c_lVD5OnUHO3AbekAcLFyN9VxLchNwiSNlgI7hb6aHf49kETdhZcvEabO3n5Ipm2YQnTVKF5Ef-2gQcR_n6X44Li88ksd7ErKdu1qU9qqqBrBWvHvZigO9kFqW0lwo_tW7HebDe0pAt2DP51gP87GuyLRrrjvDuPxhz3yNziW8N0_jWjYaYrllIAQCP1AKe8eQ-mdimPFlBWHHXEIKe-0ldGZ2tLr6_RYZPZL767vtcsJNngsc5aC90aDlnThPWCQUauc92cbQXqR3PqeV3RYQa0HjBsmg8vtaBHFiOUJUiZqkELUxOZ5UrsvMiqxeTboxkIpFLhwf5rneuzPAg
      # Skip TLS certificate validation
      - SPRING_CLOUD_CONSUL_TLS_SKIP_VERIFY=true
      # Enable debugging for Spring Cloud and HTTP client
      - LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_CLOUD=DEBUG
      - LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_WEB_CLIENT=DEBUG
      - LOGGING_LEVEL_REACTOR_NETTY_HTTP_CLIENT=DEBUG
      # Keycloak authentication for the application itself
      - SPRING_SECURITY_OAUTH2_CLIENT_PROVIDER_OIDC_ISSUER_URI=https://keycloak.appf4.io.vn/realms/jhipster
      - JHIPSTER_SECURITY_OAUTH2_AUTH_SERVER_URL=https://keycloak.appf4.io.vn
      - SPRING_R2DBC_URL=r2dbc:mysql://appf4.io.vn:3306/apigateway
      - SPRING_LIQUIBASE_URL=jdbc:mysql://appf4.io.vn:3306/apigateway?useUnicode=true&characterEncoding=utf8&useSSL=false&createDatabaseIfNotExist=true
      - JHIPSTER_CACHE_REDIS_SERVER=redis://appf4.io.vn:6379
      - SPRING_KAFKA_BOOTSTRAP_SERVERS=appf4.io.vn:9092
      # Kafka producer configuration to limit message production
      - SPRING_CLOUD_STREAM_FUNCTION_DEFINITION=kafkaProducer
      - SPRING_CLOUD_STREAM_POLLER_FIXED_DELAY=60000
      - SPRING_CLOUD_STREAM_BINDINGS_KAFKAPRODUCER-OUT-0_DESTINATION=notifications
      - SPRING_CLOUD_STREAM_KAFKA_BINDER_AUTOADDPARTITIONS=true
      - LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_CLOUD_STREAM=INFO
      - LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_KAFKA=INFO
      # Service registration configuration
      - SPRING_CLOUD_CONSUL_DISCOVERY_SERVICE_NAME=remote-apigateway
      # - SPRING_CLOUD_CONSUL_DISCOVERY_INSTANCE_ID=${JHIPSTER_APP_NAME}:${spring.application.instance-id:${random.value}}
      - SPRING_CLOUD_CONSUL_DISCOVERY_PREFER_IP_ADDRESS=true
      - SPRING_CLOUD_CONSUL_DISCOVERY_IP_ADDRESS=appf4.io.vn
      - SPRING_CLOUD_CONSUL_DISCOVERY_PORT=8081
      # Health check configuration
      - SPRING_CLOUD_CONSUL_DISCOVERY_HEALTH_CHECK_TYPE=tcp
      - SPRING_CLOUD_CONSUL_DISCOVERY_HEALTH_CHECK_INTERVAL=30s
      - SPRING_CLOUD_CONSUL_DISCOVERY_HEALTH_CHECK_TIMEOUT=15s
      - SPRING_CLOUD_CONSUL_DISCOVERY_HEALTH_CHECK_TLS_SKIP_VERIFY=true
      # Expose management endpoints for health check
      - MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics
      - MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=always
      - MANAGEMENT_HEALTH_DISKSPACE_ENABLED=false
      - SPRING_CLOUD_CONSUL_DISCOVERY_TAGS=version=1.0,environment=production
      # Add Authorization header with Bearer token for config and discovery operations
      - SPRING_CLOUD_CONSUL_CONFIG_HEADERS_Authorization=Bearer ${TOKEN}
      - SPRING_CLOUD_CONSUL_DISCOVERY_HEADERS_Authorization=Bearer ${TOKEN}
      # Configure health check request headers for Nginx
      - SPRING_CLOUD_CONSUL_DISCOVERY_HEALTH_CHECK_HEADERS_X-Forwarded-For=appf4.io.vn
      - SPRING_CLOUD_CONSUL_DISCOVERY_HEALTH_CHECK_HEADERS_X-Forwarded-Proto=https
      - SPRING_CLOUD_CONSUL_DISCOVERY_HEALTH_CHECK_HEADERS_Host=appf4.io.vn
